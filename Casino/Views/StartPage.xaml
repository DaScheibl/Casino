<UserControl x:Class="Casino.Views.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casino.Views"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <TextBlock Text="Casino" FontSize="60"  TextAlignment="Center" Margin="175,40,175,325"/>
        <Button Content="Login" FontSize="20" Command="{Binding DataContext.NavigateLoginCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Margin="292,219,292,178"/>
        <Button Content="Register" FontSize="20" Command="{Binding DataContext.NavigateRegisterCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Margin="292,297,292,100"/>
    </Grid>
</UserControl>
